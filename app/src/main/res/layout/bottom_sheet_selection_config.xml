<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_0"
    >

  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginBottom="80dp"
      >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <TextView
          android:id="@+id/label_header"
          style="@style/App.Text.Body.Emphasized.One"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/space_medium"
          android:padding="@dimen/space_large"
          android:text="@string/configuration"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />

      <TextView
          android:id="@+id/label_adapter_mode"
          style="@style/App.Text.Body.Primary.Two"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="@dimen/space_large"
          android:text="@string/adapter"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/label_header"
          />

      <Spinner
          android:id="@+id/spinner_adapter_mode"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:entries="@array/adapter_modes"
          app:layout_constraintBottom_toBottomOf="@+id/label_adapter_mode"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="@+id/label_adapter_mode"
          />

      <TextView
          android:id="@+id/label_language_mode"
          style="@style/App.Text.Body.Primary.Two"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/space_large"
          android:padding="@dimen/space_large"
          android:text="@string/languages"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/label_adapter_mode"
          />

      <Spinner
          android:id="@+id/spinner_language_mode"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:entries="@array/adapter_modes"
          app:layout_constraintBottom_toBottomOf="@+id/label_language_mode"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="@+id/label_language_mode"
          />

      <TextView
          android:id="@+id/label_topics_mode"
          style="@style/App.Text.Body.Primary.Two"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/space_large"
          android:padding="@dimen/space_large"
          android:text="@string/topics"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/label_language_mode"
          />

      <Spinner
          android:id="@+id/spinner_topics_mode"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:entries="@array/adapter_modes"
          app:layout_constraintBottom_toBottomOf="@+id/label_topics_mode"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="@+id/label_topics_mode"
          />

      <TextView
          android:id="@+id/label_sources_mode"
          style="@style/App.Text.Body.Primary.Two"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/space_large"
          android:padding="@dimen/space_large"
          android:text="@string/sources"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/label_topics_mode"
          />

      <Spinner
          android:id="@+id/spinner_sources_mode"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:entries="@array/adapter_modes"
          app:layout_constraintBottom_toBottomOf="@+id/label_sources_mode"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="@+id/label_sources_mode"
          />

      <TextView
          android:id="@+id/label_np_mode"
          style="@style/App.Text.Body.Primary.Two"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="32dp"
          android:padding="@dimen/space_large"
          android:text="@string/news_papers"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/label_sources_mode"
          />

      <Spinner
          android:id="@+id/spinner_np_mode"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:entries="@array/adapter_modes"
          app:layout_constraintBottom_toBottomOf="@+id/label_np_mode"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="@+id/label_np_mode"
          />

      <TextView
          android:id="@+id/label_channel_mode"
          style="@style/App.Text.Body.Primary.Two"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="32dp"
          android:padding="@dimen/space_large"
          android:text="@string/news_channels"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/label_np_mode"
          />

      <Spinner
          android:id="@+id/spinner_channel_mode"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:entries="@array/adapter_modes"
          app:layout_constraintBottom_toBottomOf="@+id/label_channel_mode"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="@+id/label_channel_mode"
          />

      <TextView
          android:id="@+id/label_web_mode"
          style="@style/App.Text.Body.Primary.Two"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="32dp"
          android:padding="@dimen/space_large"
          android:text="@string/websites"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/label_channel_mode"
          />

      <Spinner
          android:id="@+id/spinner_web_mode"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:entries="@array/adapter_modes"
          app:layout_constraintBottom_toBottomOf="@+id/label_web_mode"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="@+id/label_web_mode"
          />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.core.widget.NestedScrollView>

  <include
      layout="@layout/include_config_button_panel"/>

</FrameLayout>
